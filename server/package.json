{
  "name": "bygagoos-server",
  "version": "2.1.0",
  "description": "Serveur Express sécurisé pour ByGagoos - Système de gestion de production industrielle",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:windows": "set NODE_ENV=development && nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "build": "echo 'No build needed for server'",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:security": "npm audit --audit-level=high",
    "test:db": "node test-connection.js",
    "test:auth": "jest auth.test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "migrate": "node migrations/run.js",
    "migrate:create": "node migrations/create.js",
    "seed": "node seeders/run.js",
    "health": "node scripts/health-check.js",
    "security:check": "node scripts/security-check.js",
    "backup:db": "node scripts/backup-database.js",
    "deploy:vercel": "vercel --prod",
    "deploy:setup": "node scripts/deploy-setup.js"
  },
  "keywords": [
    "bygagoos",
    "express",
    "nodejs",
    "postgresql",
    "authentication",
    "security",
    "production-management",
    "erp"
  ],
  "author": "Tovoniaina Rahendrison <contact@bygagoos.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bygagoos/bygagoos-server.git"
  },
  "bugs": {
    "url": "https://github.com/bygagoos/bygagoos-server/issues"
  },
  "homepage": "https://bygagoos.com",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7",
    "postgresql": ">=15"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/coverage/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
